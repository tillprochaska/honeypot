= simple_form_for @report do |r|
  = r.input :name
  = r.input :frontend_base_url
  = r.input :start_date
  = r.input :duration
  = r.input :hive_id, label: "Hive ID for use with the Wolf Waagen API"
  = r.input :video, label: "Video URL"
  - unless @report.variables.empty?
    %h3 Custom variables
    = r.simple_fields_for :variables do |vf|
      = vf.input :value, label: vf.object.key
  .form-group
    = f.button :submit, class: ['btn', 'btn-primary']
